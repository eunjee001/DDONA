<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
<LinearLayout 
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:id="@+id/ll_title"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/ll_back">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_back"
            android:background="@drawable/back"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_title_q"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_title"
            android:gravity="center"
            android:text="@string/q1"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </RelativeLayout>
    <GridView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="15dp"
        android:id="@+id/grid_view"
        android:numColumns="8"
        tools:listitem="@layout/layout_step"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_question"
        android:layout_marginTop="36dp"
        android:text="문제다 문제다 문제다 문제다 문제 ~"
        android:textColor="#DDDDDD"
        android:textSize="18dp"
        android:layout_gravity="center"/>


    <LinearLayout
        android:id="@+id/ll_q1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="90dp"
        android:orientation="vertical">
    <ImageView
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:id="@+id/iv_q1"
        android:background="@drawable/q1"
        android:layout_gravity="center"
       />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="너는 문제야"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#868686"
        android:background="@drawable/ic_question_btn"
        android:layout_marginHorizontal="17dp"
        android:id="@+id/btn_q1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_q2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:id="@+id/iv_q2"
            android:background="@drawable/q2"
            android:layout_gravity="center"
           />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="너는 문제야"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#868686"
            android:background="@drawable/ic_question_btn"
            android:layout_marginHorizontal="17dp"
            android:id="@+id/btn_q2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_q3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:id="@+id/iv_q3"
            android:background="@drawable/q3"
            android:layout_gravity="center"
       />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="너는 문제야"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#868686"
            android:background="@drawable/ic_question_btn"
            android:layout_marginHorizontal="17dp"
            android:id="@+id/btn_q3"/>
    </LinearLayout>



    </LinearLayout>
</layout>