<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame">
<LinearLayout 
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:id="@+id/ll_title"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/ll_back">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_back"
            android:background="@drawable/back"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_title_q"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_title"
            android:gravity="center"
            android:text="@string/q1"
            android:textColor="@color/white"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_title_info_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="부캐가 완성 되었습니다."
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone"/>

    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="15dp"
        android:layout_gravity="center"
        android:id="@+id/grid_view"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        tools:listitem="@layout/layout_step"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_question"
        android:layout_marginTop="36dp"
        android:layout_marginHorizontal="15dp"
        android:textColor="#DDDDDD"
        android:textSize="18dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/q_check">

    <LinearLayout
        android:id="@+id/ll_q1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:orientation="vertical">
    <ImageView
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:id="@+id/iv_q1"
        android:background="@drawable/q1"
        android:layout_gravity="center"
       />
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/text_selector"
        android:background="@drawable/select_qs_btn"
        android:layout_marginHorizontal="17dp"
        android:id="@+id/btn_q1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_q2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:id="@+id/iv_q2"
            android:background="@drawable/q2"
            android:layout_gravity="center"
           />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/text_selector"
            android:background="@drawable/select_qs_btn"
            android:layout_marginHorizontal="17dp"
            android:id="@+id/btn_q2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_q3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:id="@+id/iv_q3"
            android:background="@drawable/q3"
            android:layout_gravity="center"
       />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/text_selector"
            android:background="@drawable/select_qs_btn"
            android:layout_marginHorizontal="17dp"
            android:id="@+id/btn_q3"/>
    </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/q_write"
        android:paddingBottom="10dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_nm">

            <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/q3"
            android:layout_gravity="center"
            android:visibility="invisible"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:id="@+id/et_name"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:layout_marginHorizontal="17dp"
            android:textColor="@color/black"
            android:hint="이름을 적어주세요"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/ic_name_write"
            />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="완료하기"
                android:textSize="18dp"
                android:textStyle="bold"
                android:clickable="false"
                android:textColor="@color/color_868686"
                android:background="@drawable/ic_question_btn"
                android:layout_marginHorizontal="17dp"
                android:id="@+id/btn_complete"/>
        </LinearLayout>
  </RelativeLayout>
    <RelativeLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_complete_character"
        android:layout_marginTop="15dp"
        android:paddingBottom="10dp"
        >
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_width="350dp"
            android:layout_height="320dp"
            android:background="@drawable/ic_image"
            android:id="@+id/ll_image"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="134dp"
                android:layout_height="46dp"
                android:background="@drawable/ic_title"
                android:gravity="center"
                android:text="부캐 이름"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:textStyle="bold" />
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="290dp"
                android:layout_height="230dp"
                android:id="@+id/iv_character"
                android:scaleType="fitXY"/>

        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_image_bottom"
            android:id="@+id/ll_explain"
            android:gravity="center_horizontal"
            android:layout_below="@id/ll_image"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_character_title"
                android:text="내별명별명별명"
                android:layout_marginTop="17dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_character_explain"
                android:text="내별명별명별명내별명별명별명내별명별명별명내별명별명별명내별명별명별명내별명별명별명내별명별명별명내별명별명별명내별명별명별명내별명별명별명"
                android:layout_marginTop="7dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="14dp"/>
            
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="나의 부캐와 대화하러가기"
            android:layout_alignParentBottom="true"
            android:textSize="18dp"
            android:textStyle="bold"
            android:clickable="false"
            android:textColor="@color/white"
            android:background="@drawable/ic_question_btn_click"
            android:layout_marginHorizontal="17dp"
            android:id="@+id/btn_go_chat"/>

    </RelativeLayout>

    </LinearLayout>
    </FrameLayout>
</layout>